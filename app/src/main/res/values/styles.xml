<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">#ff1da1f2</item>
    </style>

    <style name="CounterStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/twitter_blue_50</item>
        <!--other parameters that you want to change -->
    </style>

    <style name="CounterStyleOverflow" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/medium_red_50</item>
        <!--other parameters that you want to change -->
    </style>


</resources>
